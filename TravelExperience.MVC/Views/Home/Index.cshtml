@model TravelExperience.MVC.ViewModels.MainPageViewModel
@{
    ViewBag.Title = "Home Page";
}

<!DOCTYPE html>
<html>
<head>
    <title>Vacation Rentals, Homes</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href='https://fonts.googleapis.com/css?family=Julius Sans One' rel='stylesheet'>
    <link rel="stylesheet" href="~/Content/Site.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>

<body class="background_img">

    <div class="row" style="font-size: 15px; font-family:'Julius Sans One', sans-serif; margin-top:90px;">
        I travel not to go anywhere, but to go.<br />
        I travel for travel’s sake.<br />
        The great affair is to move.<br />
    </div>

    <div class="row" style="font-size: 12px; font-family: 'Julius Sans One', sans-serif;">
        -Robert Louis Stevenson
    </div>

    @using (Html.BeginForm("Search", "Home", FormMethod.Get))
    {
        <div class="container mt-3 rounded" style="align-self:center; max-width: 500px; padding: 30px 30px 60px 30px; background-color: rgba(113, 99, 71, 0.5); font-family: Helvetica;  font-weight: 600; color:azure;">
            <h1 style="font-size: 2em; font-weight: bold; margin-bottom: 15px; font-family: 'Julius Sans One', sans-serif;">FIND A PERFECT VACATION</h1>
            <div class="form-group" style=" font-size: small;">
                <label>WHERE</label><br>
                <input class="form-control" name="LocationString" type="text" placeholder="Anywhere" list="LocationsMainPageList" id="LocationsForMainPage" style="font-size:small;" />
                <datalist id="LocationsMainPageList">
                    @Html.DropDownListFor(model => model.Location, new SelectList(Model.Locations.Select(x => x.City).Distinct().OrderBy(x => x)))
                </datalist>
            </div>
            <div class="input-group-prepend" style="font-size: small;">
                <label>CHECK IN</label> &emsp; &emsp; &emsp; &emsp; &emsp; &emsp; &emsp; &emsp; &emsp; &emsp;
                <label>CHECK OUT</label><br>
            </div>
            <div class="input-group">
                <input class="form-control" type="date" placeholder="dd-mm-yyyy" name="BookingStartDate" style="font-size:small;" />
                <input class="form-control" type="date" placeholder="dd-mm-yyyy" name="BookingEndDate" style="font-size:small;" />
            </div>
            <br>
            <div class="form-group" style=" font-size: small;">
                <label>GUESTS</label><br>
                @Html.TextBox("Guests", 1, new { @class = "form-control", type = "number", min = 1, style = "font-size:13px;" })<br>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-lg" style="float:left;">Search</button>
            </div>
        </div> <br />
    }

    <br />
    
    @using (Html.BeginForm("Search", "Home", FormMethod.Get))
    {
        <div style="margin-top: 350px; font-size: 14px; font-family: 'Julius Sans One', sans-serif; text-decoration:underline; color: black;">
                <h1>Travel the world</h1>
            </div>

        <div class="image_bg1" style="max-width:stretch; margin-top:20px;">
            <h1>REYKJAVIK</h1>
            <h5>ICELAND</h5>
            <button onclick="location.href='@Url.Action("Search", "Home")'" style="font-size:medium; color:darkred;">Browse Accommodations</button>
        </div> <hr />

        <div class="image_bg2" style="max-width:stretch;">
            <h1>SABANA WESTPUNT</h1>
            <h5>CURACAO</h5>
            <button onclick="location.href='@Url.Action("Search", "Home")'" style="font-size:medium; color:darkred;">Browse Accommodations</button>
        </div> <hr />

        <div class="image_bg3" style="max-width:stretch;">
            <h1>SEOUL</h1>
            <h5>SOUTH KOREA</h5>
            <button onclick="location.href='@Url.Action("Search", "Home")'" style="font-size:medium; color:darkred;">Browse Accommodations</button>
        </div> <hr />
    }

    @*<------ Chersonio: Random suggested accommodation links ----->*@

    @{ if (Model.RandomAccommodations.Any())
        {
            <div style="margin: 50px 400px 20px 20px; font-size: 14px; font-family: 'Julius Sans One', sans-serif; text-decoration:underline; color: black;">
                <h1>Hot new places to visit</h1>
            </div>

            <div class="container" style="padding: 10px;">
                @Html.Partial("_SuggestedRandomAccommodations", Model)
            </div>
            <br />
        }
    }


    <footer>
        <div class="container" style="margin-top: 70px;">
            <div class="row">
                <div class="col-md-3">
                    <section>
                        <h6 style="margin-left: 40px;">Travel Experience</h6>
                        <ul style="list-style: none;">
                            <li><a href="#">Help</a></li>
                            <li><a href="#">Policies</a></li>
                            <li><a href="#">Terms</a></li>
                            <li><a href="#">Privacy</a></li>
                        </ul>
                    </section>
                </div>

                <div class="col-md-3">
                    <section>
                        <h6 style="margin-left: 40px;">Discover</h6>
                        <ul style="list-style: none;">
                            <li><a href="#">Trust & Safety</a></li>
                            <li><a href="#">Site Map</a></li>
                        </ul>
                    </section>
                </div>
                <div class="col-md-3">
                    <section>
                        <h6 style="margin-left: 40px;">Hosting</h6>
                        <ul style="list-style: none;">
                            <li><a href="#">Why Host</a></li>
                            <li><a href="#">Responsible Hosting</a></li>

                        </ul>
                    </section>
                </div>
                <div class="col-md-3">
                    <section>
                        <h5 style="margin-left: 40px;">
                            <a href="#" style="color: #636e72;"><i class="fa fa-facebook" style="padding-right: 15px;"></i></a>
                            <a href="#" style="color: #636e72;"><i class="fa fa-twitter" style="padding-right: 15px;"></i></a>
                            <a href="#" style="color: #636e72;"><i class="fa fa-instagram" style="padding-right: 15px;"></i></a>
                        </h5>
                    </section>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    <script>

        var today = new Date(new Date().getFullYear(), new Date().getMonth(), new Date().getDate());
        $('#startDate').datepicker({
            uiLibrary: 'bootstrap4',
            iconsLibrary: 'fontawesome',
            minDate: today,
            maxDate: function () {
                return $('#endDate').val();
            }
        });
        $('#endDate').datepicker({
            uiLibrary: 'bootstrap4',
            iconsLibrary: 'fontawesome',
            minDate: function () {
                return $('#startDate').val();
            }
        });
    </script>

</body>

</html>


