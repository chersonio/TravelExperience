<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Travel Experience: Book homes, hotels, and more...</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300&family=Roboto:wght@300&display=swap" rel="stylesheet">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.7.2/css/all.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href='https://fonts.googleapis.com/css?family=Julius Sans One' rel='stylesheet'>
    <link rel="stylesheet" href="~/Content/Site.css">

</head>


<body>
    <header class="navbar-fixed-top">
        <div class="containernav">
            <h1 class="logo">
                <a href="@Url.Action("Index", "Home")"><i class="fa fa-superpowers" aria-hidden="true"></i>TRAVEL EXPERIENCE</a>
            </h1>
            <nav>
                @Html.Partial("_LoginPartial")
            </nav>
        </div>
    </header>

    @RenderSection("FullWidth", required: false).
    .
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer id="footer">
            <p>&copy; @DateTime.Now.Year - TravelExperience - Chersioniotakis Stavros, Panagou Nikoleta, Parisi Stavroula</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>