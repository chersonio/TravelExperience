@model TravelExperience.MVC.Controllers.HelperClasses.ImageInfo

<div>
    @{ var firstImageAsThumbnail = Model; }
    @if (Model != null)
    {
        <img src="data:image/@firstImageAsThumbnail.ImageType;base64, @firstImageAsThumbnail.ImageBase64" 
             alt="Image" 
             style="border-radius: 15px;" 
             width="@firstImageAsThumbnail.ImageSize.Width" 
             height="@firstImageAsThumbnail.ImageSize.Height" />
    }
    else
    {
        <img src="data:image/png;base64, image-not-found.png" alt="Image" style="border-radius:15px; width: 300px; height: 200px;" />
    }
</div>